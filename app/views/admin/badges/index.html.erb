<h1><%= t('.header')%></h1>
  <% @badges.each do |badge| %>
    <div>
      <h3><%= badge.title %></h3>
      <%= badge.image %>
      <b><%= badge.rule %></b>
      <%= link_to t('.show'), admin_badge_url(badge) %>
      <%= link_to t('.edit'), edit_admin_badge_url(badge) %>
      <%= link_to t('.delete'), admin_badge_url(badge),
                      method: :delete, data: { confirm: 'Are u sure' }%>
    </div>
  <% end %>
<%= link_to t('.new_badge'), new_admin_badge_path %>
