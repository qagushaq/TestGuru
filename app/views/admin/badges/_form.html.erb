<%= form_with model: [:admin, @badge], local: true do |form| %>
  <div class="form-group">
    <%= render 'shared/errors', resource: @badge %>

    <p>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :image %>
      <%= form.select :image, options_for_select(Badge.images), prompt: true %>
    </p>

    <p>
      <%= form.label :rule %>
      <%= form.select :rule, options_for_select(Badge::BADGE_RULES)%>
    </p>

    <p>
      <%= form.label :value%>
      <%= form.text_field :value%>
    </p>

    <p><%= form.submit %></p>
  </div>
<% end %>
